<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_half"
    android:layout_marginHorizontal="@dimen/margin_half"
    android:layout_marginVertical="@dimen/margin_half"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/margin_half"
    app:cardElevation="@dimen/margin_quarter"
    app:cardMaxElevation="@dimen/margin_half">

    <LinearLayout
        android:id="@+id/itemCategoryDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rv_item_image_height"
            android:background="@drawable/ic_launcher_background"
            android:contentDescription="@string/category_item_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/itemCategoryTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_half"
            android:textAppearance="@style/ItemTitle"
            tools:text="Бургеры" />

        <TextView
            android:id="@+id/itemCategoryDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:textAppearance="@style/CategoryItemTxt"
            tools:text="Рецепты всех популярных видов бургеров" />

    </LinearLayout>

</androidx.cardview.widget.CardView>