<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_half"
    android:layout_marginHorizontal="@dimen/margin_half"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/margin_half"
    android:layout_margin="@dimen/margin_half"
    app:cardElevation="@dimen/margin_quarter"
    app:cardMaxElevation="@dimen/margin_half">

    <LinearLayout
        android:id="@+id/item_category_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_category_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/ic_launcher_background" />

        <!-- TODO: edit attribute text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_half"
            android:fontFamily="@font/montserrat_alternates"
            android:text="Бургеры"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/item_title_text_size" />

        <!-- TODO: edit attribute text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:fontFamily="@font/montserrat_medium"
            android:text="Рецепты всех популярных видов бургеров"
            android:textSize="@dimen/item_description_text_size" />

    </LinearLayout>

</androidx.cardview.widget.CardView>