<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_text_12"
    android:orientation="vertical">

    <TextView
        android:id="@+id/methodStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/CookingItemMethod"
        tools:text="1. В глубокой миске смешайте говяжий фарш, лук, чеснок, соль и перец.
        Разделите фарш на 4 равные части и сформируйте котлеты." />

    <View
        android:id="@+id/divider_method"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginVertical="@dimen/margin_half"/>

</LinearLayout>
